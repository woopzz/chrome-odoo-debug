{
    "name": "Debug param in address bar",
    "version": "1.0",
    "description": "Append debug param to the browser address bar.",
    "icons": {
        "128": "static/icon128.png"
    },
    "background": {
        "scripts": ["./background.js"]
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "commands": {
        "debug": {
          "suggested_key": {
            "default": "Alt+Shift+1"
        },
        "description": "Dev Mode"
    },
    "debug-assets": {
        "suggested_key": {
            "default": "Alt+Shift+2"
        },
        "description": "Dev Mode (with assets)"
    },
    "no-debug": {
        "suggested_key": {
            "default": "Alt+Shift+3"
        },
        "description": "Disable Dev Mode"
        }
    },
    "permissions": [
        "tabs"
    ],
    "manifest_version": 2
}
