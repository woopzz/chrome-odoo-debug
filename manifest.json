{
    "name": "Debug param in address bar",
    "version": "1.0",
    "description": "Append debug param to the browser address bar.",
    "background": {
        "scripts": ["./background.js"]
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "commands": {
        "debug": {
          "suggested_key": {
            "default": "Ctrl+Shift+1"
        },
        "description": "Dev Mode",
        "global": true
    },
    "debug-assets": {
        "suggested_key": {
            "default": "Ctrl+Shift+2"
        },
        "description": "Dev Mode (with assets)",
        "global": true
    },
    "no-debug": {
        "suggested_key": {
            "default": "Ctrl+Shift+3"
        },
        "description": "Disable Dev Mode",
        "global": true
        }
    },
    "permissions": [
        "tabs"
    ],
    "manifest_version": 2
}
